@model BglGithubSite.ViewModels.GithubUserViewModel

@{
    ViewBag.Title = "Search";
}

<h2>Search Results</h2>

<h3>Github User Details</h3>
@Html.DisplayFor(model => model.Name)
@Html.DisplayFor(model => model.Location)
@Html.DisplayFor(model => model.Avatar_Url)

<h3>Top 5 Repos</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TopFiveRepos.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TopFiveRepos.FirstOrDefault().Html_Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TopFiveRepos.FirstOrDefault().Stargazers_Count)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.TopFiveRepos)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Html_Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stargazers_Count)
            </td>
        </tr>
    }

</table>

